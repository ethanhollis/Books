@{
}
@model Book

<tr>
    <td>@Model.BookTitle</td>
    <td>@Model.AuthorFirst @Model.AuthorMiddle @Model.AuthorLast</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Pages</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>@Model.Price.ToString("c")</td>
    <td><form id="@Model.BookId" asp-page="/Cart" method="post">
            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn-success btn-sm">Add To Cart</button>
        </form></td>
</tr>