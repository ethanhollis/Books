@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel
<header>
    <h1 class="text-center">Books</h1>
</header>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="table-responsive-lg">
            <table class="table table-dark table-striped table-hover">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>ISBN</th>
                    <th>Number of Pages</th>
                    <th>Classification</th>
                    <th>Category</th>
                    <th>Price</th>
                </tr>
                @foreach (var x in Model.Books)
                {
                    <tr>
                        <td>@x.BookTitle</td>
                        <td>@x.AuthorFirst @x.AuthorMiddle @x.AuthorLast</td>
                        <td>@x.Publisher</td>
                        <td>@x.ISBN</td>
                        <td>@x.Pages</td>
                        <td>@x.Classification</td>
                        <td>@x.Category</td>
                        <td>$@x.Price</td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
         page-class-selected="btn-info" class="btn-group pull-right m-1"></div>
</div>
