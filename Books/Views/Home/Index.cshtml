@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel



        <div class="table-responsive-lg">
            <table class="table table-dark table-striped table-hover">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>ISBN</th>
                    <th>Number of Pages</th>
                    <th>Classification</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th></th>
                </tr>
                @foreach (var x in Model.Books)
                {
                    <partial name="BookSummary" model="x" />
                }

            </table>
        </div>


<div class="row justify-content-center">
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
         page-class-selected="btn-info" page-url-category="@Model.CurrentCategory" class="btn-group pull-right m-1"></div>
</div>
