@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book>
<header>
    <h1 class="text-center">Books</h1>
</header>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="table-responsive-lg">
            <table class="table table-dark table-striped table-hover">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>ISBN</th>
                    <th>Classification</th>
                    <th>Category</th>
                    <th>Price</th>
                </tr>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.BookTitle</td>
                        <td>@x.AuthorFirst @x.AuthorMiddle @x.AuthorLast</td>
                        <td>@x.Publisher</td>
                        <td>@x.ISBN</td>
                        <td>@x.Classification</td>
                        <td>@x.Category</td>
                        <td>$@x.Price</td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>